&lt;td class=&#34;lntd&#34;&gt;
&lt;pre tabindex=&#34;0&#34; class=&#34;chroma&#34;&gt;&lt;code class=&#34;language-fallback&#34; data-lang=&#34;fallback&#34;&gt;[
{ &amp;#34;keys&amp;#34;: [&amp;#34;ctrl+w&amp;#34;], &amp;#34;command&amp;#34;: &amp;#34;delete_word&amp;#34;, &amp;#34;args&amp;#34;: {&amp;#34;forward&amp;#34;: false, &amp;#34;sub_words&amp;#34;: true}},
]
